<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import Controllers.ClientsWindowController?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.ClientsWindowController">
    <top>
        <Label text="Client Management" style="-fx-font-size: 18px; -fx-padding: 10;" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <TableView fx:id="clientTable" prefHeight="200"/>
    </center>
    <bottom>
        <VBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <HBox spacing="10">
                <TextField fx:id="nameField" promptText="Name"/>
                <TextField fx:id="emailField" promptText="Email"/>
                <TextField fx:id="addressField" promptText="Address"/>
            </HBox>
            <HBox spacing="10">
                <Button text="Add" onAction="#handleAddClient"/>
                <Button text="Edit" onAction="#handleEditClient"/>
                <Button text="Delete" onAction="#handleDeleteClient"/>
                <Button text="Refresh" onAction="#loadClients"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
