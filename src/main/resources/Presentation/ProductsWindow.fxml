<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.ProductsWindowController">
    <top>
        <Label text="Product Management" style="-fx-font-size: 18px; -fx-padding: 10;" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <TableView fx:id="productTable" prefHeight="200"/>
    </center>
    <bottom>
        <VBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <HBox spacing="10">
                <TextField fx:id="nameField" promptText="Product Name"/>
                <TextField fx:id="quantityField" promptText="Quantity"/>
                <TextField fx:id="priceField" promptText="Price"/>
            </HBox>
            <HBox spacing="10">
                <Button text="Add" onAction="#handleAddProduct"/>
                <Button text="Edit" onAction="#handleEditProduct"/>
                <Button text="Delete" onAction="#handleDeleteProduct"/>
                <Button text="Refresh" onAction="#loadProducts"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
