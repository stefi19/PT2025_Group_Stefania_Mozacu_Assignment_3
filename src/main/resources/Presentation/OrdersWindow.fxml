<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.OrdersWindowController">
    <top>
        <Label text="Place Order" style="-fx-font-size: 18px; -fx-padding: 10;" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <ComboBox fx:id="clientBox" promptText="Select Client"/>
            <ComboBox fx:id="productBox" promptText="Select Product"/>
            <TextField fx:id="quantityField" promptText="Quantity"/>
            <Button text="Place Order" onAction="#handlePlaceOrder"/>
            <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
        </VBox>
    </center>
</BorderPane>
